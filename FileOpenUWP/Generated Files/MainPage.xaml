<Page
    x:Class="FileOpenUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FileOpenUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <TextBlock x:ConnectionId='1' Grid.Row="0" x:Name="m_Text" Text="Empty" VerticalAlignment="Center"  HorizontalAlignment="Center" Foreground="Black"/>
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:ConnectionId='2' x:Name="PickButtonSingle" Content="Pick Single" HorizontalAlignment="Left"                                />
                <Button x:ConnectionId='3' x:Name="PickButtonMultiple" Content="Pick Multiple" HorizontalAlignment="Left"                                 />
                <Button x:ConnectionId='4' x:Name="PickFolderButton" Content="Pick Folder" HorizontalAlignment="Left"                               />
            </StackPanel>
        </Grid>
    </Grid>
</Page>

